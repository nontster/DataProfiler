# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_SCHEMA=public

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_password_here

# MSSQL Configuration (Azure SQL Edge for Mac M1/M2 compatibility)
MSSQL_HOST=localhost
MSSQL_PORT=1433
MSSQL_DATABASE=testdb
MSSQL_USER=sa
MSSQL_PASSWORD=YourStrong@Password123
MSSQL_SCHEMA=dbo

# Metrics Storage Configuration
# Options: 'clickhouse' (default) or 'postgresql'
METRICS_BACKEND=clickhouse

# PostgreSQL Metrics Configuration (optional, defaults to same as POSTGRES_*)
# Use if you want to store metrics in a different PostgreSQL instance
# PG_METRICS_HOST=localhost
# PG_METRICS_PORT=5432
# PG_METRICS_DATABASE=postgres
